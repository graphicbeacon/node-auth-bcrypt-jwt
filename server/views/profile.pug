extends ./includes/layout.pug

block mainContent
    h1= content
    form.form-horizontal(method="post", action="/profile")
        .form-group
            .col-sm-12.col-md-3
                label.control-label(for="firstname") First name
                input.form-control#firstname(type="text", name="firstname", value=fname, required)
            .col-sm-12.col-md-3
                label.control-label(for="lastname") Last name
                input.form-control#lastname(type="text", name="lastname", value=lname, required)
        .form-group
            .col-sm-12.col-md-6
                label.control-label(for="email") Email address
                input.form-control#email(type="email", name="email", value=email, required)
        .form-group
            .col-sm-12.col-md-6
                label.control-label(for="aboutme") About me
                textarea.form-control#aboutme(name="aboutme", cols="30", rows="10")
        .form-group
            .col-sm-12.col-md-6
                button.btn.btn-primary(type="submit") Update details
    