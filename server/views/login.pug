extends ./includes/layout.pug

block mainContent
    h1= content
    form.form-horizontal(method="post", action="/login")
        .form-group
            .col-sm-12.col-md-6
                input.form-control#username(type="text", name="username", placeholder="Enter your username")
        .form-group
            .col-sm-12.col-md-6
                input.form-control#password(type="password", name="password", placeholder="Enter your password")
        .form-group
            .col-sm-12.col-md-6
                button.btn.btn-default(type="submit") Log in